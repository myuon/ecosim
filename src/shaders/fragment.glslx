precision mediump float;
varying vec3 v_color;
void main(void) {
  vec3 base_color = vec3(0.07, 0.07, 0.07);
  vec2 uv = gl_PointCoord.xy * 6.0 - 3.0;
  float d = length(uv);

  vec3 color = clamp(v_color / pow(d, 2.0), 0.0, 2.0);

  gl_FragColor = vec4(mix(base_color, color, length(color)), 1.0);
}
